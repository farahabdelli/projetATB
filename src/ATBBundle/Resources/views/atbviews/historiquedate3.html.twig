{% extends 'base3.html.twig' %}
{% block content %}

    <br><br>

    <h3 class="subtitle fancy"><span><a href=""> Services</a></span></h3>
    <br>
<br>
    <center>
        <table >
            <form method="post" style="text-align: center">

                <tr>
                    <td style="font-weight: bold"> Numéro de compte: </td>

                    <td >
                        <select name="numCompte" class="form-control input-focus " style="height: 3%">
                            {% for i in em %}
                            <option  value="{{ i.numCompte }}">{{ i.numCompte }}(TND) {{ i.typeCompte }}</option>

                            {% endfor %}
                        </select></td>
                    </td>
                    <td></td>
                    <td style="font-weight: bold"> Type d'opération:</td>
                    <td >
                        <select name="Type" class="form-control input-default ">
                            <option  value="Disponible">Tous</option>
                            <option  value="Disponible">Débit</option>
                            <option selected="selected" value="Non disponible">Crédit</option>
                        </select></td>
                    </td>
                </tr>

                <tr>


                    <td style="font-weight: bold" >
                        <input type="radio" name="choix"/>Date :
                    </td>

                    <td style="font-weight: bold"><br>Du
                        <br><input type="date"></td>

                    <td style="font-weight: bold"><br>Au
                        <br> <input type="date">
                    </td>


                </tr>



                <tr>
                    <td> </td>
                    <td> </td>
                    <td>
                        <input type="submit" value="Voir" id="voir" >

                    </td>
                    <td>
                        <input type="submit" value="Imprimer">
                    </td>
                </tr>

            </form>
        </table></center>



    <br>
    <form>

        <h3 style="margin-left: 15px"></h3>
        <h3 class="subtitle fancy"><span><a href=""> Opérations</a></span></h3>
        <br><br>
        <table class="table table-striped table-hover ">
            <thead>
            <tr>

                <th>Date</th>
                <th>Intitulé et Détails</th>
                <th>Date valeur</th>
                <th>Débit</th>
                <th>Crédit</th>
                <th>Solde </th>

            </tr>
            </thead>
            <tbody>

            {% for i in m %}
                <tr>


                    <td>{{ i.dateTransaction | date }}  </td>
                    <td>{{ i.intitule }}</td>
                    <td>{{ i.dateValeur | date }}</td>
                    <td>{{ i.debit }}</td>
                    <td>{{ i.credit }}</td>
                    <td>{{ i.montant }}</td>



                </tr>
            {% endfor %}
            </tbody>
        </table>

    </form>


    <br><br>




{% endblock %}
